<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=""
    android:background="#f7e0c8">


    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:textSize="20sp"
        android:text="@string/rec_button"
        android:id="@+id/rec_button"
        android:background="@drawable/rec"
        android:textColor="#ff0000"
        android:textAllCaps="false"
        android:layout_alignTop="@+id/pause_button"
        android:layout_toLeftOf="@+id/textView2"
        android:layout_toStartOf="@+id/textView2" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:textAllCaps="false"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:textSize="20sp"
        android:text="@string/pause_button"
        android:id="@+id/pause_button"
        android:background="@drawable/startse"
        android:textColor="#7d7676"
        android:layout_marginBottom="88dp"
        android:layout_above="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:textAllCaps="false"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:textSize="20sp"
        android:text="@string/stop_button"
        android:id="@+id/stop_button"
        android:background="@drawable/startse"
        android:layout_alignTop="@+id/pause_button"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stop"
        android:id="@+id/textView2"
        android:textColor="#000000"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/send"
        android:background="@drawable/send"
        android:id="@+id/button"
        android:textColor="#ffff"
        android:textAllCaps="false"
        android:layout_marginBottom="46dp"
        android:layout_alignParentBottom="true"
        android:textSize="25sp"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
